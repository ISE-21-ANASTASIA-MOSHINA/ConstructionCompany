
@{
    ViewBag.Title = "EditZdanieForArenda";
}

<h2>EditZdanieForArenda</h2>

@{
    ViewBag.Title = "Редактировать здание для аренды";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WeBudget.Models.ZdanieForArenda
<h2>Здание для аренды № @Model.Id</h2>
@using (Html.BeginForm("EditZdanieForArenda", "ZdanieForArenda", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Date, "Дата постройки")
            <br />
            @Html.EditorFor(m => m.Date)
        </p>
        <p>
            @Html.LabelFor(m => m.Enginner, "Главный инженер")
            <br />
            @Html.EditorFor(m => m.Enginner)

        </p>
        <p>
            @Html.LabelFor(m => m.Sum, "Стоимость постройки")
            <br />
            @Html.EditorFor(m => m.Sum)
        </p>

        <p>
            @Html.LabelFor(m => m.Comment, "Дополнительная информация")
            <br />
            @Html.EditorFor(m => m.Comment)
        </p>
        @Html.HiddenFor(m => m.User)
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}