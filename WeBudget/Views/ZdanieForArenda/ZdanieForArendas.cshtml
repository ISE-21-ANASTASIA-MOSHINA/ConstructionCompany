
@{
    ViewBag.Title = "ZdanieForArendas";
}


@model IEnumerable<WeBudget.Models.ZdanieForArenda>
@{
    Layout = null;
}


<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title>Строительная компания</title>
    <link rel="stylesheet" href="~/Content/styles.css" type="text/css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,300" type="text/css" />

    <title>Выравнивание фотографии по центру</title>
</head>




<style>
    .fig {
        text-align: center; /* Выравнивание по центру */
    }


    .center {
        width: 700px; /* Ширина элемента в пикселах */
        padding: 10px; /* Поля вокруг текста */
        margin: auto; /* Выравниваем по центру */
    }
</style>


<p class="fig">
    <img src="~/img/home.jpg"
         width="1263" height="320" alt="Фотография">
</p>

<div class="center">
    <nav>
        <ul class="top-menu">
            <li><a href="index">ГЛАВНАЯ</a></li>
            <li class="About">О САЙТЕ</li>
            <li><a href="Contact">ОБРАТНАЯ СВЯЗЬ</a></li>
        </ul>
    </nav>
</div>
    <aside>
        <nav>
            <ul class="aside-menu">
                <li><a href="Table">ссылка1</a></li>
                <li><a href="Dohodi">ссылка2</a></li>
                <li><a href="Kakebo">ссылка3</a></li>

            </ul>
        </nav>
    </aside>



    <div class="center">
        <h2>Здания для аренды</h2>


        @{ var grid = new WebGrid(Model); }
        <div>
            @grid.GetHtml(columns: grid.Columns(
                                                     grid.Column("Id", "№"),
                                                     grid.Column("Date", "Дата постройки"),
                                                     grid.Column("Engineer", "Главный инженер"),
                                                     grid.Column("Sum", "Стоимость здания"),
                                                     grid.Column("Comment", "Дополнительная информация"),
                                                     grid.Column("Редактировать", format: @<a href="~/ZdanieForArenda/EditZdanieForArenda/@item.Id"> Редактировать</a>),
                                                         grid.Column("Удалить", format: @<a href="~/ZdanieForArenda/DeleteZdanieForArenda/@item.Id"> Удалить</a>)
                                                             ), tableStyle: "table-bordered")
        </div>
        <input type="button" value="Добавить" onClick='location.href="CreateZdanieForArenda"'>

    </div>

    