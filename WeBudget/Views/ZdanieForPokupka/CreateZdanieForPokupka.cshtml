    @model WeBudget.Models.ZdanieForPokupka

    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <h2>Проекты компании</h2>

    <script type="text/javascript">

        function checkForm() {
            var regex = new RegExp("^(0[1-9]|[12][0-9]|3[01])[- /.](0[1-9]|1[012])[- /.]((19|20)\\d\\d)$");
            var date = $('#Date').val();
            var sum = $('#Sum').val();
            var comment = $('#Comment').val();

            var submitButton = $('#submitButton');
    
            if ((comment == "") || (sum == "") || (date == "") || (regex.test(date) == false)) {

                submitButton.prop('disabled', true);
            }
            else {
                submitButton.prop('disabled', false);
            }
        }



    </script>


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true);

        @Html.LabelFor(model => model.Date, "Дата постройки")
        <br />
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { onchange = "checkForm()" } })
        <br />
        <br /><br />
        @Html.LabelFor(model => model.Sum, "Стоимость здания")
        <br />
        @Html.EditorFor(model => model.Sum, new { htmlAttributes = new { onchange = "checkForm()" } })
        <br /><br />
        @Html.LabelFor(model => model.Comment, "Дополнительная информация")
        <br />
        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { onchange = "checkForm()" } })

        <br /><br />
        <input id="submitButton" type="submit" value="Добавить" disabled />
    }
