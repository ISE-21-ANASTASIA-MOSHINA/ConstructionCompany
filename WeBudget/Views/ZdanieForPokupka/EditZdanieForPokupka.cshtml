@{
    ViewBag.Title = "Редактировать доход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WeBudget.Models.ZdanieForPokupka
<h2>Здание для покупки № @Model.Id</h2>
@using (Html.BeginForm("UpdateZdanieForPokupka", "ZdanieForPokupka", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(m => m.Id)
    <p>
        @Html.LabelFor(m => m.Date, "Дата постройки")
        <br />
        @Html.EditorFor(m => m.Date)
    </p>
    <p>
        @Html.LabelFor(m => m.Sum, "Стоимость объекта")
        <br />
        @Html.EditorFor(m => m.Sum)
    </p>

    <p>
        @Html.LabelFor(m => m.Comment, "Дополнительная информация")
        <br />
        @Html.EditorFor(m => m.Comment)
    </p>
        @Html.HiddenFor(m => m.User)
    <p><input type="submit" value="Отправить" /></p>
</fieldset>
}