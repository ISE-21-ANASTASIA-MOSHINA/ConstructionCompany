
@{
    ViewBag.Title = "Проекты";
}



@model IEnumerable<WeBudget.Models.ZdanieForPokupka>
@{
    Layout = null;
}


<head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title>Проекты</title>
    <link rel="stylesheet" href="~/Content/styles.css" type="text/css" />
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,300" type="text/css" />

    <title>Выравнивание фотографии по центру</title>
</head>




<style>
    .fig {
        text-align: center; /* Выравнивание по центру */
    }


    .center {
        width: 700px; /* Ширина элемента в пикселах */
        padding: 10px; /* Поля вокруг текста */
        margin: auto; /* Выравниваем по центру */
    }
</style>


<p class="fig">
    <img src="~/img/home.jpg"
         width="1263" height="320" alt="Фотография">
</p>

<div id="wrapper">
    <nav>

        <ul class="top-menu">
            <li>@Html.ActionLink("Главная", "Home", "Home")</li>
            <li>@Html.ActionLink("О компании", "About", "Home")</li>
            <li>@Html.ActionLink("Клиентам", "Customers", "Home")</li>
            <li>@Html.ActionLink("Проекты", "ZdanieForPokupkas", "ZdanieForPokupka")</li>
            <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
        </ul>

    </nav>
</div>
<body>
    <div id="wrapper">
        <h2>Проекты</h2>


        @{ var grid = new WebGrid(Model); }
        <div>
            @grid.GetHtml(columns: grid.Columns(
                                                     grid.Column("Id", "№"),
                                                     grid.Column("Date", "Дата постройки"),
                                                     grid.Column("Sum", "Стоимость здания"),
                                                     grid.Column("Comment", "Дополнительная информация"),
                                                     grid.Column("", format: @<a href="~/ZdanieForPokupka/EditZdanieForPokupka/@item.Id"> Редактировать</a>),
                                                                     grid.Column("", format: @<a href="~/ZdanieForPokupka/DeleteZdanieForPokupka/@item.Id"> Удалить</a>)
                                                                                     ), tableStyle: "table-bordered")
        </div>
        <input type="button" value="Добавить" onClick='location.href="CreateZdanieForPokupka"'>

    </div>
</body>

